// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
  // https://containers.dev/implementors/json_reference/#general-properties
  "name": "70MaiM300Toolbox",
  "init": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ],
      "settings": {
        "python.formatting.provider": "yapf",
        "python.formatting.yapfPath": "/usr/local/py-utils/bin/yapf",
        "python.formatting.yapfArgs": [
          "--style",
          "{based_on_style: google, COLUMN_LIMIT: 100, INDENT_WIDTH: 2}"
        ]
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers-contrib/features/yapf:1": {}
  },
  // https://containers.dev/implementors/json_reference/#image-specific
  "image": "python:3.11.3",
  // https://containers.dev/implementors/json_reference/#lifecycle-scripts
  "postCreateCommand": [
    "pip3",
    "install",
    "--editable",
    "."
  ]
}
